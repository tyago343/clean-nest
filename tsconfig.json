{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "paths": {
      "@modules/*": [
        "src/modules/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@config/*": [
        "src/shared/infrastructure/config/*"
      ],
      "@logger/*": [
        "src/shared/infrastructure/logger/*"
      ],
      "@exceptions/*": [
        "src/shared/infrastructure/exceptions/*"
      ],
      "@repositories/*": [
        "src/shared/infrastructure/repositories/*"
      ],
      "@product/*": [
        "src/modules/Product/*"
      ],
      "@user/*": [
        "src/modules/User/*"
      ],
      "@category/*": [
        "src/modules/Category/*"
      ]
    }
  }
}